{
    "defaultSeverity": "error",
    "extends": [
        "tslint:latest",
        "tslint-config-standard"
    ],
    "jsRules": {},
    "rules": {
        "semicolon": [ true, "never" ],
        "interface-name": [true, "never-prefix"],
        "no-implicit-dependencies": [true, "dev"],

        // TODO: remove?
        "object-literal-sort-keys": false
    },
    "rulesDirectory": []
}